/* pages/personal/personal.wxss */

page {
    padding: 0;
    padding-bottom: 30rpx;
    color: #333;
    background-color: #efefef;
}
.head{
    padding: 30rpx 0;
    vertical-align: top;
    background-color: #FFF;
}
.head-image {
    width: 140rpx;
    height: 140rpx;
    margin: 0 auto;
    margin-top: 46rpx;
    border-radius: 50%;
    overflow: hidden;
    background-color: #FFF;
}

.username {
    margin-top: 20rpx;
    text-align: center;
    font-size: 16px;
}

.list-con {
    padding: 0 15px;
    margin-bottom: 45px;
}

.list {
    margin-top: 15px;
    background-color: #fff;
}

.list .status {
    padding: 10px 15px;
    text-align: right;
    border-bottom: 1px dashed #eee;
}

.list .ing {
    color: #01d183;
}

.list .readay {
    color: #f1001a;
}

.list .over {
    color: #999;
}

.con {
    position: relative;
    display: flex;
    padding: 15px;
}

.con:before, .con:after {
    content: '';
    display: inline-block;
    position: absolute;
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: #efefef;
    top: 20px;
}

.con:before {
    left: -6px;
}

.con:after {
    right: -6px;
}

.con>image {
    margin-right: 12px;
    min-width: 120px;
    max-width: 120px;
    height: 100px;
}

.content .title {
    font-size: 14px;
    color: #666;
    width: 100%;
}

.key {
    margin: 6px 0;
    font-size: 12px;
    color: #666;
}

.key text {
    line-height: 2em;
}

.icon {
    width: 20px;
    height: 20px;
    margin-right: 6px;
    vertical-align: -5px;
}

.nullData {
    text-align: center;
    padding: 30rpx 0;
}

.nullData view {
    color: #999;
}
