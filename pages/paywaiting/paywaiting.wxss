/* pages/paywaiting/paywaiting.wxss */
page{
    background-color:#EFEFEF;
}
.rest_time{
    line-height: 3em;
    text-align: center;
    background-color: #FFF8E8;
}
.rest_time text{
    color: #D15642;
}

.order_info{
    margin-bottom: 20rpx;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
    background-color: #FFF;
}
.key{
    display: flex;
    line-height: 2em;
}
.key>view:nth-child(1){
    white-space: nowrap;
}
.key>view:nth-child(2){
    flex-grow: 2;
    color: #333;
}

.invoice,
.paymethods{
    display: flex;
    padding: 20rpx 0;
    background-color: #fff;
}
.invoice{
    padding-left: 20rpx;
    box-sizing: border-box;
}
.invoice>text:nth-child(1),
.paymethods>text:nth-child(2){
    flex-grow: 2;
    color: #333;
    align-self: center;
}
.invoice .icon,
.paymethods .icon{
    margin: 0 30rpx;
    color: #09BB07;
    font-size: 25px;
}
.invoice .icon{
    color: #999;
}
.invoice .icon.active{
    color: #4287ff;
}
.invoice-mes{
    padding: 0 30rpx;
    line-height: 80rpx;
}
.invoice-mes navigator{
    display: inline-block;
    color: #4287ff;
}

.btns {
    position: fixed;
    display: flex;
    justify-content: flex-end;
    bottom: 0;
    left: 0;
    right: 0;
    height: 88rpx;
    text-align: right;
    border-top: 1px solid #d4d4d4;
    background-color: #fff;
}
.btns button {
    display: inline-block;
    margin:0;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    color: #fff;
    border-radius: 0;
    letter-spacing: 2px;
    font-size: 16px;
    background-color: #4287ff;
}

.btns button:after {
    border: none;
    border-radius: none;
}
.text2{
    display: inline-block;
    width: 0.5em;
}